#!/usr/bin/env bash

set -euo pipefail

if [ $# -lt 1 ]; then
  echo "Usage: $0 <binary-name>"
  exit 1
fi

BIN_NAME="$1"

# Resolve binary
BIN_PATH="$(command -v "$BIN_NAME" || true)"
if [ -z "$BIN_PATH" ]; then
  echo "âŒ Binary '$BIN_NAME' not found in PATH"
  exit 1
fi

REAL_PATH="$(realpath "$BIN_PATH")"
STORE_PATH=$(echo "$REAL_PATH" | grep -o '/nix/store/[^/]*/[^/]*')

if [ -z "$STORE_PATH" ]; then
  echo "âŒ Could not determine store path for $BIN_NAME"
  exit 1
fi

DRV_PATH=$(nix-store --query --deriver "$STORE_PATH")

echo "ğŸ” Binary: $BIN_NAME"
echo "ğŸ“ Location: $REAL_PATH"
echo "ğŸ“¦ Store path: $STORE_PATH"
echo "ğŸ› ï¸ Derivation: $DRV_PATH"

echo
echo "ğŸ“‹ Package metadata:"
nix show-derivation "$DRV_PATH" | jq '.[].env | {name, version, src, builder, system, outputs}' || echo "(failed to parse metadata)"

echo
echo "ğŸ”— Why is it in the system profile?"
nix why-depends /run/current-system "$REAL_PATH" || echo "(nix why-depends failed)"
